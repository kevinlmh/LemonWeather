<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:layout_marginRight="50px">

        <LinearLayout
            android:weightSum="2"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:weightSum="5"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/cloud_icon"
                    android:src="@drawable/ic_lemon_cloudiness"
                    android:layout_margin="10px"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cloudiness"
                        android:id="@+id/textView"
                        android:layout_weight="1"
                        android:layout_gravity="left"
                        android:textSize="10pt"
                        android:textAlignment="center"
                        android:layout_marginTop="30px"
                        android:fontFamily="sans-serif-thin"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cloud_text"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:layout_gravity="left"
                        android:layout_marginBottom="30px"
                        android:textSize="9pt"/>
                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:weightSum="5"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/pressure_icon"
                    android:src="@drawable/ic_lemon_pressure"
                    android:layout_margin="10px"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pressure"
                        android:id="@+id/textView2"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_marginTop="30px"
                        android:layout_gravity="left"
                        android:textSize="10pt"
                        android:fontFamily="sans-serif-thin"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/pressure_text"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:layout_gravity="left"
                        android:layout_marginBottom="30px"
                        android:textSize="9pt"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:weightSum="2"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:weightSum="5"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/humidity_icon"
                    android:src="@drawable/ic_lemon_humidity"
                    android:layout_margin="10px"
                    android:layout_marginLeft="0dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Humidity"
                        android:id="@+id/textView3"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_marginTop="30px"
                        android:layout_gravity="left"
                        android:textSize="10pt"
                        android:fontFamily="sans-serif-thin"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/humidity_text"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:layout_gravity="left"
                        android:layout_marginBottom="30px"
                        android:textSize="9pt"/>
                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:weightSum="5"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/wind_icon"
                    android:src="@drawable/ic_lemon_wind"
                    android:layout_margin="10px"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wind"
                        android:id="@+id/textView4"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_marginTop="30px"
                        android:layout_gravity="left"
                        android:textSize="10pt"
                        android:fontFamily="sans-serif-thin"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/wind_text"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:layout_gravity="left"
                        android:layout_marginBottom="30px"
                        android:textSize="9pt"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:weightSum="2"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:weightSum="5"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/sunrise_icon"
                    android:src="@drawable/ic_lemon_sunrise"
                    android:layout_margin="10px"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sunrise"
                        android:id="@+id/textView5"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_marginTop="30px"
                        android:layout_gravity="left"
                        android:textSize="10pt"
                        android:fontFamily="sans-serif-thin"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/sunrise_text"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:layout_marginBottom="30px"
                        android:textSize="9pt"/>
                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:weightSum="5"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/sunset_icon"
                    android:src="@drawable/ic_lemon_sunset"
                    android:layout_margin="10px"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sunset"
                        android:id="@+id/textView6"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_marginTop="30px"
                        android:layout_gravity="left|top"
                        android:textSize="10pt"
                        android:textIsSelectable="false"
                        android:fontFamily="sans-serif-thin"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/sunset_text"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:layout_marginBottom="30px"
                        android:textSize="9pt"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:layout_gravity="bottom">

        <LinearLayout
            android:weightSum="2"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time1_icon"
                android:layout_marginRight="20px"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/time1_time"
                    android:layout_gravity="center"
                    android:textSize="8pt"
                    android:fontFamily="sans-serif-thin"/>

                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/time1_temp"
                    android:layout_gravity="center"
                    android:textSize="8pt"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time2_icon"
                android:layout_marginRight="20px"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/time2_time"
                    android:layout_gravity="center"
                    android:textSize="8pt"
                    android:fontFamily="sans-serif-thin"/>

                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/time2_temp"
                    android:layout_gravity="center"
                    android:textSize="8pt"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time3_icon"
                android:layout_marginRight="20px"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/time3_time"
                        android:layout_gravity="center"
                        android:textSize="8pt"
                        android:fontFamily="sans-serif-thin"/>

                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/time3_temp"
                        android:layout_gravity="center"
                        android:textSize="8pt"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time4_icon"
                android:layout_marginRight="20px"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/time4_time"
                    android:layout_gravity="center"
                    android:textSize="8pt"
                    android:fontFamily="sans-serif-thin"/>

                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/time4_temp"
                    android:layout_gravity="center"
                    android:textIsSelectable="false"
                    android:textSize="8pt"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>